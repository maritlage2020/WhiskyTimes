<div class="review_<%= review.id %>" >
  <% if review.favorited_by?(current_user) %>
    <%= link_to review_favorites_path(review), method: :delete, remote: true do %>
      <%= fa_icon "heart", text: "#{review.favorites.count}", style: "color: #DA1725;" %>
    <% end %>
  <% else %>
    <%= link_to review_favorites_path(review), method: :post, remote: true do %>
      <%= fa_icon "heart-o", text: "#{review.favorites.count}", style: "color: #DA1725;" %>
    <% end %>
  <% end %>
</div>