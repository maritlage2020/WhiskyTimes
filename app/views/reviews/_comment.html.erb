<div class=".comment_<%= @review.id %>" >
  <% review_comments.each do |review_comment| %> <!-- コメント一覧 -->
  <tr>
    <td>
      <%= link_to user_path(review_comment.user), class: "user_#{review_comment.user.id}" do %>
      <%= attachment_image_tag review_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %><br>
      <%= review_comment.user.name %>
      <% end %>
    </td>
    <td><%= review_comment.comment %></td>
    <% if review_comment.user == current_user %>
       <td><%= link_to 'destroy', review_comments_path(review_comment), class: 'btn-sm btn-danger', method: :delete, remote: true %></td>
    <% end %>
  </tr>
  <% end %>
</div>