<%= form_with(model: review, local: true) do |form| %>
<div class="form-group p-1 m-1">
  <div class="input-group p-1 m-1">
    <%= form.label :image %>
  </div>
  <%= form.attachment_field :image_id ,class: "music_image" %>
</div>

<div class="form-group p-1 m-1">
  <div class="input-group p-1 m-1">
    <%= form.label :title %><span class="badge badge-danger p-1 m-1">記入してください</span><br/>
  </div>
  <%= form.text_field :title %>
</div>

<div class="form-group p-1 m-1">
  <div class="input-group p-1 m-1">
    <%= form.label :body %>
  </div>
  <%= form.text_area :body, :size=>"60x10"  %>
</div>

<div class="form-group p-1 m-1">
  <div class="input-group p-1 m-1">
    <%= form.submit "送信", class: 'btn btn-secondary btn-block m-0' %>
  </div>
</div>
<% end %>