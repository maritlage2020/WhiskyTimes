<div class="container">
    <div class="col-md-2"></div>
    <div class="row">
        <div class="col-md-8">
            <%= render "devise/shared/error_messages", resource: resource %>
            <h2>新規登録</h2>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="panel panel-primary">
                <div class="panel-heading" style="text-align: center;">
                    <b>新規登録フォーム</b>
                </div>
                <table class="table table-striped table-bordered table-hover">
                    <tr>
                        <div class="field">
                            <td>
                                <%= f.label :"ニックネーム" %>
                            </td>
                            <td>
                                <%= f.text_field :name, autofocus: true, class: "text-field-small" %>
                            </td>
                        </div>
                    </tr>
                    <tr>
                        <div class="field">
                            <td>
                                <%= f.label :"年齢" %>
                            </td>
                            <td>
                                <%= f.date_select :age, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 20), default: Date.new(1989, 1, 1), class: "date-field-large" %>
                            </td>
                        </div>
                    </tr>
                    <tr>
                        <div class="field">
                            <td>
                                <%= f.label :"メールアドレス" %>
                            </td>
                            <td>
                                <%= f.email_field :email, class: "text-field-lage"  %>
                            </td>
                        </div>
                    </tr>
                    <tr>
                        <div class="field">
                            <td>
                                <%= f.label :"パスワード(6文字以上)" %>
                            </td>
                            <td>
                                <% if @minimum_password_length %>
                                <% end %>
                                <%= f.password_field :password, autocomplete: "new-password", class: "text-field-lage"  %>
                            </td>
                        </div>
                    </tr>
                    <tr>
                        <div class="field">
                            <td>
                                <%= f.label :"パスワード(再度)" %>
                            </td>
                            <td>
                                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-field-lage"  %>
                            </td>
                        </div>
                    </tr>
                </table>
            </div>
            <div class="actions" style="text-align: center;">
                <%= f.submit "登録", class: "btn-sm btn-primary" %>
            </div>
            <% end %>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>